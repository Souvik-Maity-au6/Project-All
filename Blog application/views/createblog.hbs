<div class="row create-blog">
        <div class="col-8 offset-2">
             <div class="main-div p-3 mt-5">
                <div class="register-form">
                    <form action="/blog/create" method="POST">
                        <div class="form-group">
                            <label for="btitle">Blog Title</label>
                            <input type="text" name="title" id="btitle" class="form-control" placeholder="Enter your blog title" required/>
                        </div>
                        <div class="form-group">
                            <label for="bcontent">Blog Content</label>
                            <textarea class="form-control" name="body" id="bcontent" rows="3"></textarea>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="isCompleted" value="true" id="blogcomplete"/>
                            <label class="form-check-label" for="blogcomplete">Blog Completed</label>
                        </div>
                        <div class="form-group pt-3">
                            <input type="submit" class="btn btn-primary btn-lg" value="Create blog" required/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>