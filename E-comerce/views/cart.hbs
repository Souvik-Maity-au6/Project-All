{{>header2}}
{{#if length}}
    {{#each products}}
        <div class="row cart-product mt-3">
            <div class="col-3">
                <img src="{{this.product.imgUrl}}" style="width: 200px; height: 200px; border-radius: 50%; margin-left: 45px;" alt="show image" srcset="">
                <div class="form-inline mt-3">
                    <form action={{constructRemove}} method="post" class="form-group">
                        <input type="submit" class="btn btn-danger" value="Remove from cart">
                    </form>
                    <form action="/addorder/{{this.product.id}}" method="post" class="form-group pl-3 ">
                        <input type="submit" class="btn btn-success" value="Finish payment">
                    </form>
                </div>
            </div>
            <div class="col-2 mt-5 pt-4">
                <p>Brand: {{this.product.title}}</p>
            </div>
            <div class="col-3 mt-5 pt-4">
                <form action="#" method="post">
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" min="0" max="5" step="1" value="1">
                    <input type="submit" class="btn btn-primary" value="Submit">
                </form>
            </div>
            <div class="col-2 mt-5 pt-4">
                <p>Price: {{this.product.price}}</p>
            </div>
            <div class="col-2 mt-5 pt-4">
                <p>Total:</p>
            </div>
        </div>
    {{/each}}
    {{else}}
        <div class="cart-header text-center">
            <h1>Hey, {{name}} it feel so light</h1>
            <p>There is nothing in your cart. Let's add some items</p>
            <form action="/product" method="get" class="get-product mt-5">
                <button type="submit" class="btn btn-secondary btn-lg px-5 py-3">Shop now</button>
            </form>       
        </div>
{{/if}}
