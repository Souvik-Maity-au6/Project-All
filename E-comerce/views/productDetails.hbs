{{>header2}}

<div class="container">
    <div class="row mt-5">
        <div class="col-9 pl-5 ml-5">
            <div class="row pl-5">
                <div class="col-5 ml-3">
                    <img src="{{img}}" style="height: 300px; width: 300px;border: 1px solid black" alt="Shoe Image" srcset="">
                </div>
                <div class="col-6 product-buy-container ml-5">
                    <div class="product-description pt-3">
                        <p>Brand: {{brandName}}</p>
                        <p>Price: {{price}}</p>
                        <p>Avg.Ratings: {{ratings}}</p>
                        <p>Avilable For: {{category}}</p>
                    </div>
                    <div class="add-cart form-inline pt-3 pl-5">
                        <form action="/addorder/{{id}}" method="post" class="form-group pr-3">
                            <input type="submit" class="btn btn-success btn-lg" value="Buy now">
                        </form>
                        <form action="/addcart/{{id}}" method="post" class="form-group">
                            <input type="submit" class="btn btn-warning btn-lg" value="Add to cart">
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    <div class="col-3">
        {{!-- rewiew section --}}
    </div>
</div>
</div>
<div class="container-fluid pt-5">
    <h3>Products you may like :</h3>
    <div class="row pt-3 mt-3">
    {{#each products}}
        <div class="col-2 card-deck py-3">
            <div class="card" style="width: 15rem;">
                <img class="card-img-top" src="{{this.imgUrl}}" style="width: 100%; height: 150px" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Brand: {{this.title}}</p>
                    <p class="card-text">Price: {{this.price}}</p>
                    <p class="card-text">Category: {{this.category}}</p>
                </div>
                <div class="text-center pb-2">
                    <form action={{constructBuyShoe}} method="get">
                    <input type="submit" class="btn btn-primary btn-lg px-5" value="Buy">
                </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>
</div>