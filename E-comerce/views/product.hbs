{{>header2}}

<div class="row pl-5 ml-5 pt-3 mt-3">
    {{#each products}}
        <div class="col-3 card-deck py-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.imgUrl}}" style="width: 100%; height: 300px" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Brand: {{this.title}}</p>
                    <p class="card-text">Price: {{this.price}}</p>
                    <p class="card-text">Category: {{this.category}}</p>
                </div>
                <div class="text-center pb-2">
                    <form action={{constructBuyShoe}} method="get">
                    <input type="submit" class="btn btn-primary btn-lg px-5" value="Buy">
                </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<div class="pagination-container">
    <nav>
        <ul class="pagination justify-content-end">
            <li class="page-item">
            <a class="page-link" href="/product?page=0" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
            </li>
            <li class="page-item"><a class="page-link" href="/product?page=0">1</a></li>
            <li class="page-item"><a class="page-link" href="/product?page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="/product?page=3">3</a></li>
